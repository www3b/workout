# Laravel Backend API URL (server-side, internal)
API_BASE_URL=http://localhost:8080/api

# Public API Base (client-side, proxied)
NUXT_PUBLIC_API_BASE=/api/proxy

# Session password for nuxt-auth-utils (minimum 32 characters)
# This is used to encrypt session cookies
# Generate a secure random string for production
NUXT_SESSION_PASSWORD=your-super-secret-session-password-min-32-chars

# Dev server configuration
NUXT_HOST=localhost
